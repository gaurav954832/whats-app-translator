{
  "manifest_version": 3,
  "name": "WhatsApp Translator Extension",
  "version": "1.0",
  "permissions": [
    "activeTab", 
    "scripting",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
    
  }
}

